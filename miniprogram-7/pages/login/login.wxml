<view class="title">登录账号</view>
<view class="input-box">
  <view >
    <text class="label">账号</text>
    <input type="text" class="account" placeholder="请输入账号" bind:change="onAccountChange" />
  </view>
  <view >
    <text class="label">密码</text>
    <input type="password" class="password" placeholder="请输入密码" bind:change="onPasswordChange" />
  </view>
</view>
<button class="login-button" bindtap="login">登录</button>